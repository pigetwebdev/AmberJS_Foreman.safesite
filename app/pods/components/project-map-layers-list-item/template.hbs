<div class="flex flex-grow flex-col">
  <div class="text-sm font-medium">
    {{get @feature 'properties.name'}}
  </div>
  <div class="text-xs font-normal text-grey-dark">
    Type:
    {{get @feature 'geometry.type'}}
  </div>
  {{#if (eq (get @feature 'geometry.type') 'Polygon')}}
    <div class="text-xs font-normal text-grey-dark">
      Area:
      {{concat (turf-area (get @feature 'geometry')) 'sqm'}}
    </div>
  {{/if}}
  {{#if (eq (get @feature 'geometry.type') 'LineString')}}
    <div class="text-xs font-normal text-grey-dark">
      Length:
      {{concat (turf-length (get @feature 'geometry')) 'km'}}
    </div>
  {{/if}}
</div>
<div>
  <div class="flex-initial">
    <button
      class="inline-flex items-center justify-center p-1 {{if @feature.visible 'text-blue' 'text-grey-light'}}"
      {{action toggleVisibility @feature}}
    >
      <EmberTooltip>
        <span class="text-xs">
          Toggle layer visibility
        </span>
      </EmberTooltip>
      {{svg-jar 'ui-07' class='w-6 h-6 !path-fill-current'}}
    </button>
  </div>
</div>